{
  "version": 1,
  "projects": {
    "all": {
      "root": ".",
      "targets": {
        "build": {
          "builder": "@snuggery/snuggery:glob",
          "options": {
            "include": "*"
          }
        }
      }
    },

    "bucket": {
      "root": "packages/bucket",
      "targets": {
        "build": {
          "builder": "@snuggery/snuggery:execute",
          "options": {
            "package": "@yarnpkg/builder",
            "arguments": ["build", "plugin"]
          }
        }
      }
    },
    "super-delux": {
      "root": "packages/super-delux",
      "targets": {
        "build": {
          "builder": "@snuggery/snuggery:execute",
          "options": {
            "package": "@yarnpkg/builder",
            "arguments": ["build", "plugin"]
          }
        }
      }
    }
  }
}
